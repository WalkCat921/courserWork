<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <display-name>Phoneshop servlet api training</display-name>
    <context-param>
        <param-name>createSampleData</param-name>
        <param-value>true</param-value>
    </context-param>

<!--    <listener>-->
<!--        <listener-class>com.egor.zhukovsky.phoneshop.web.SampleDataServletContextListener</listener-class>-->
<!--    </listener>-->

    <servlet>
        <servlet-name>productList</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.ProductListPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productList</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productDetails</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.ProductDetailsPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productDetails</servlet-name>
        <url-pattern>/products/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.SearchPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>popupWindow</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.PopupWindowServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>popupWindow</servlet-name>
        <url-pattern>/price-history/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productCart</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.CartPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>productCart</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteCartItem</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.DeleteCartItemServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteCartItem</servlet-name>
        <url-pattern>/cart/deleteCartItem/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>miniCart</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.MiniCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>miniCart</servlet-name>
        <url-pattern>/cart/miniCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>checkout</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.CheckoutPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>checkout</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>orderOverview</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.OrderOverviewPageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>orderOverview</servlet-name>
        <url-pattern>/order/overview/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>adminMenu</servlet-name>
        <servlet-class>com.egor.zhukovsky.phoneshop.web.AdminMenuPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>adminMenu</servlet-name>
        <url-pattern>/admin/menu</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>dosFilter</filter-name>
        <filter-class>com.egor.zhukovsky.phoneshop.web.DosFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>dosFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <error-page>
        <location>/WEB-INF/pages/errorProductNotFound.jsp</location>
        <exception-type>java.util.NoSuchElementException</exception-type>
    </error-page>

    <error-page>
        <location>/WEB-INF/pages/error500.jsp</location>
        <error-code>500</error-code>
        <error-code>404</error-code>
    </error-page>


    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>This is real name</realm-name>
    </login-config>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>SecureJsp</web-resource-name>
            <url-pattern>/admin/menu</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <security-role>
        <role-name>admin</role-name>
    </security-role>
</web-app>
